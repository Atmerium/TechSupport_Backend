generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model advices {
  adviceId      Int          @id @default(autoincrement())
  adviceContent String
  adviceVisible Boolean?     @default(true)
  components    components[]
}

model components {
  componentId          Int      @id @default(autoincrement())
  componentName        String
  componentDescription String?
  adviceId             Int?
  componentVisible     Boolean? @default(true)
  advices              advices? @relation(fields: [adviceId], references: [adviceId], map: "Components_adviceId_fkey")

  @@index([adviceId], map: "Components_adviceId_fkey")
}

model users {
  userId         Int      @id @default(autoincrement())
  userEmail      String
  userPassword   String
  userRememberMe Boolean  @default(false)
  userVisible    Boolean? @default(true)
}
